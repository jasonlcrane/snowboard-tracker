# Database Connection
DATABASE_URL="mysql://user:password@localhost:3306/carter_badge_tracker"

# Security
# 32+ character random string for encryption (generate with: openssl rand -hex 32)
ENCRYPTION_KEY="your-encryption-key-here"

# JWT Secret for session signing (generate with: openssl rand -hex 32)
JWT_SECRET="your-jwt-secret-here"

# Google OAuth Credentials
# Get these from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID="your-google-client-id.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Allowed Emails (comma-separated list of emails that can access the app)
ALLOWED_EMAILS="your-email@example.com"

# Server Configuration
PORT=3000
NODE_ENV=development

# Puppeteer (Optional: Only if NOT using Docker and need to point to specific Chrome)
# PUPPETEER_EXECUTABLE_PATH=/usr/bin/chromium
